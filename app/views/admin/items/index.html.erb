<%= render 'admin/sidemenu' %>
<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h3 class="registration-items">登録済商品一覧</h3>
			<div class="border"></div>

			<div class="search-box col-xs-10 col-xs-offset-1">

			<%= search_form_for @q, url: admin_items_path, html: {class: 'attribution'} do |f| %>
			<%= f.condition_fields do |c| %>
			<%= c.attribute_fields do |a| %>
			<%= a.attribute_select associations: [:artist, :category, :label] %>
			<% end %>

			<%= c.hidden_field :p, value: "cont_all" %>

			<%= c.value_fields do |v| %>
			<%= v.search_field :value, class:"search_field", placeholder: '検索ワードを入力' %>
			<% end %>
			<% end %>

			<span class="actions"><%= f.submit "検索", class:"btn btn-success" %></span>

			<% if @items.any? %>
			   <%= render 'admin/items/search-result', @items %>
			 <% end %>

			 <% if @items.nil? %>
			 <h6>検索する商品がありません。キーワードを変えてください。</h6>
			 <% end %>


			<% end %>
		</div>
		</div>
	</div>
</div>