									<div class="border"></div>

									<br><br>


												<div class="position-fix">
												 <%= link_to "マイページへ", user_path(current_user.id), class: 'btn btn-default btn-lg sasasa' %>
												 <%= link_to "商品一覧へ", items_path, class: 'btn btn-default btn-lg' %>
												</div>


