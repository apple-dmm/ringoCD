			<tr class="favorite-index-tr">
				<td>
				<% if favorite1 != nil%>
				<div class="checkbox-size">
					<%= check_box_tag 'favorites[]', favorite1.id, false, {id: favorite1.id, form: "formtag"}%>
			    </div>

			    <%= link_to item_path(favorite1.item.id) do %>
			    <%= attachment_image_tag favorite1.item, :image, :fill, 230, 230, format: 'jpg', fallback: "no_image.jpg" %>
	            <% end %>

				<div class="text-size">
			        <%=link_to favorite1.item.name, item_path(favorite1.item.id) %>
			    </div>

				<%= favorite1.item.artist.name %>

				<div class="favorite-item-price-box">価格<span class="favorite-tax-text">(税込)</span>&nbsp;&nbsp;&nbsp;: <%= favorite1.item.include_tax_price %>円</div>

				<% if favorite1.item.total_arrival_calculate - favorite1.item.total_item_order_calculate >= 1 %>
					<span class="favorite-user-stock-quantity">残り<%= favorite1.item.total_arrival_calculate - favorite1.item.total_item_order_calculate %>点</span>
						<%= form_for @cart_item, url: cart_items_path do |f| %>
					    <%= f.submit "カートに入れる", class: "btn btn-primary" %>
						<%= f.hidden_field :user_id, :value => current_user.id %>
						<%= f.hidden_field :item_id, :value => favorite1.item_id %>
		                <%= f.number_field :quantity, class:"quantity-number-field", value:1, min:1, max: favorite1.item.total_arrival_calculate - favorite1.item.total_item_order_calculate %>
		                <% end %>
				<% else %>
					<span class="favorite-stock-quantity">在庫無</span><br>
					<div class="favorite-no-stock-box">
					<span class="favorite-no-stock-text">【入荷待ち】</span>
					</div>
				<% end %>

        		<% end %>
