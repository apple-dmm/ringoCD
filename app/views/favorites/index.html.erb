   <div class="row">

     <div class="col-xs-10 col-xs-offset-1">
		<div class="favorites-title">お気に入り</div>
		<div class="favorites-border"></div>

		<div class="row">
			<div class="col-xs-5">
			<div class="favorite-count">
				【お気に入りアイテム: <%= @favorites.count %>件】
			</div>
			</div>
		</div>

	<table>
   		<% @favorites.each_slice(4) do |favorite1, favorite2, favorite3, favorite4| %>
