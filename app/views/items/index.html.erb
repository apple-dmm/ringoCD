
　　<div class="search-box-user-index col-xs-6 col-xs-offset-3">

		<%= search_form_for @q, html: {class: 'attribution'} do |f| %>
		<%= f.condition_fields do |c| %>
		<%= c.attribute_fields do |a| %>
		<%= a.attribute_select associations: [:artist, :category, :label] %>
		<% end %>

		<%= c.hidden_field :p, value: "cont_all" %>

		<%= c.value_fields do |v| %>
		<%= v.search_field :value, placeholder: '検索ワードを入力' %>
		<% end %>
		<% end %>

		<span class="actions">
			<%= f.submit "検索", class:"btn btn-success" %>
		</span>

		<% end %>
　　</div>


