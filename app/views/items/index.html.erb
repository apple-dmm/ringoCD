
　　<div class="search-box-user-index col-xs-6 col-xs-offset-4">


		<div class="change-size">

			<%= search_form_for @q, html: {class: 'attribution'} do |f| %>
		<%= f.condition_fields do |c| %>
		<%= c.attribute_fields do |a| %>
		<%= a.attribute_select associations: [:artist, :category, :label] %>
		<% end %>

		<%= c.hidden_field :p, value: "cont_all" %>

		<%= c.value_fields do |v| %>
		<%= v.search_field :value, placeholder: '検索ワードを入力' %>
		<% end %>
		<% end %>

		<span class="actions">
			<%= f.submit "検索", class:"btn btn-success" %>
		</span>

		<% end %>
　　</div>
</div>


    <% if @items.any? %>
	<h5 class="search-result">検索結果<%= @items.count %>件</h5>

			 <% else %>

			 <h6>検索する商品がありません。キーワードを変えてください。
			 </h6>
			 <% end %>

　　　　　<!--商品の検索前-->

        <div class="theTarget">
            <div class="pic1"></div>
            <div class="pic2"></div>
            <div class="pic3"></div>
            <div class="pic4"></div>
            <div class="pic5"></div>
            <div class="pic6"></div>
            <div class="pic7"></div>
        </div>
        <br><br><br>

  <div class="container">
   <div class="row">
    <div class=" col-xs-offset-1">

      <table border="0" width="500" height="300">

	    <% @items.each_slice(2) do |item1, item2| %>

		 <tbody>
				<tr>
					<td>

					<div class="sample01">


						<div class="sampleImg">
							<% if item1 != nil%>
						<%= link_to item_path(item1.id) do %>
						<%= attachment_image_tag item1, :image, :fill, 150, 150, format: 'jpg', fallback: "no_image.jpg" %>
					    </div>
						<% end %>


			        <p>
			<span class="size">
           <%=link_to item1.name, item_path(item1.id) %>
            </span>



                        <br>
					    <%= link_to item1.artist.name, item_path(item1.id) %>
					    <br><br>
					    <div>価格(税込)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= item1.price %>円</div>

						<div>在庫あり</div>
					</p>
					<% end %>
				    </div>
					</td>


					<td>
						<div class="sample01">


						<div class="sampleImg">
							 <% if item2 != nil %>
						<%= link_to item_path(item2.id) do %>
						<%= attachment_image_tag item2, :image, :fill, 150, 150, format: 'jpg', fallback: "no_image.jpg" %>
					    </div>
						<% end %>

                     <p>
                     	<span class="size">
           <%=link_to item2.name, item_path(item2.id) %>
                        </span>

                         <br>
 <%= link_to item2.artist.name, item_path(item2.id) %>
					    <br><br>
					    <div>価格(税込)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= item2.price %>円</div>

						<div>在庫あり</div>
					</p>
				    </div>
				   </td>
				</tr>
				<% end %>
			 <% end %>
	     </tbody>
	  </table>
    </div>
	  <br><br>


  <div class="row">
				<div class="col-xs-10 col-xs-offset-1">
					<%= paginate @items, class: "paginate" %>
					<p id="pageTop"><a href="#">ページトップへ</a></p>
						<script type='text/javascript'>
							$(function(){
							$('a[href^="#"]').click(function() {
								var speed = 400;
								var href= $(this).attr("href");
  								var target = $(href == "#" || href == "" ? 'html' : href);
  								var position = target.offset().top;
  								$('body,html').animate({scrollTop:position}, speed, 'swing');
  								return false;
  							});
							});
						</script>
				</div>
			</div>